      <code>require(['jquery', 'xwiki-meta'], function ($, xm) {
  'use strict';

  $(document).ready(function() {  
    // If this JS is loaded, it means that the user has reached the user limits.
    // So we remove the 'Add user' button and we replace it by a message.
    $('#tdAddNewUserOrGroup .buttonwrapper').remove();
    $('#tdAddNewUserOrGroup').append($("&lt;div class=\"box warningmessage\"&gt;$escapetool.javascript($escapetool.xml($services.localization.render('limits.user.reachedLimit')))&lt;/div&gt;"));
    
    // Disable the create wiki form
    if (xm.document == 'WikiManager.CreateWiki') {
      $('#xwikicontent &gt; *').remove();
      $('#xwikicontent').append($("&lt;div class=\"box errormessage\"&gt;$escapetool.javascript($escapetool.xml($services.localization.render('limits.wikis.createwiki', [$services.limits.wikiLimit])))&lt;/div&gt;"));
    }
  });

});
